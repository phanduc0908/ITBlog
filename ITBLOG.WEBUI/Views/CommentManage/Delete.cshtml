@using ITBLOG.CORE.Models
@model Comment
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}
<div class="container-fluid">
    <h3>Are you sure you want to delete this comment into the database?</h3>
    <form asp-action="Delete" asp-controller="CommentManage">
        <div class="row">
            <div class="form-group col-md-6">
                <label for="author">Name:</label>
                <input name="text" type="text" class="form-control" asp-for="Name" readonly>
            </div>
            <div class="form-group col-md-6">
                <label for="author">Content:</label>
                <input name="text" type="text" class="form-control" asp-for="Content" readonly>
            </div>
        </div>
        <div class="form-group pull-left">
            <button type="submit" class="btn btn-danger">DELETE</button>
        </div>
    </form>
</div>



