@using ITBLOG.CORE.ViewModels
@model BlogViewItem
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}
<div class="container-fluid">
    <h2 class="title">Are you sure you want to delete this blog into the database?</h2>
    <div class="btn-add-blog">
        <a href="@Url.Action("Index", "BlogManage")" class="my-btn">Back to List</a>
    </div>
    <form asp-action="Delete" asp-controller="BlogManage">
        <div class="row">
            <div class="form-group col-md-6">
                <label for="author">Name:</label>
                <input name="text" type="text" class="form-control" asp-for="Title" readonly>
            </div>
            <div class="form-group col-md-6">
                <label for="author">Content:</label>
                <input name="text" type="text" class="form-control" asp-for="Author" readonly>
            </div>
            <div class="form-group col-md-6">
                <label for="author">Content:</label>
                <input name="text" type="text" class="form-control" asp-for="ReleaseDay" readonly>
            </div>
            <div class="form-group col-md-6">
                <label for="author">Content:</label>
                <input name="text" type="text" class="form-control" asp-for="Genre" readonly>
            </div>
            <div class="form-group col-md-6">
                <label for="header">Content Header:</label>
                <textarea name="description" asp-for="ContentHeader" readonly></textarea>
            </div>
            <div class="form-group col-md-6">
                <label for="header">Content:</label>
                <textarea name="description" asp-for="Content" readonly></textarea>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="payment-adress">
                    <button type="submit" class="btn btn-danger waves-effect waves-light">DELETE</button>
                </div>
            </div>
        </div>
    </form>
</div>
