@using ITBLOG.CORE.ViewModels
@model BlogViewItem
@{
    ViewData["Title"] = "AddBlog";
    Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}
<div class="container-fluid">
    <h2 class="title">Add Blog</h2>
    <div class="btn-add-blog">
        <a href="@Url.Action("Index", "BlogManage")" class="my-btn">Back to List</a>
    </div>
    <div class="product-tab-list tab-pane fade active in" id="description">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="review-content-section">
                    <div id="dropzone1" class="pro-ad">
                        <form asp-action="AddBlog" asp-controller="BlogManage" class="dropzone dropzone-custom needsclick add-professors">
                            <div class="row">
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label asp-for="Author">Author:</label>
                                        <input type="text" class="form-control" placeholder="Author" asp-for="Author">
                                        <span asp-validation-for="Author" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Title:</label>
                                        <input type="text" class="form-control" placeholder="Title" asp-for="Title">
                                        <span asp-validation-for="Title" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Genre:</label>
                                        <input type="text" class="form-control" placeholder="Genre" asp-for="Genre">
                                        <span asp-validation-for="Genre" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Release Day:</label>
                                        <input type="date" class="form-control" placeholder="Release day" asp-for="ReleaseDay">
                                        <span asp-validation-for="ReleaseDay" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label>Images:</label>
                                        <input type="file" class="form-control" asp-for="Image">
                                        <span asp-validation-for="Image" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                    <div class="form-group">
                                        <label>Content header:</label>
                                        <input type="text" class="form-control" placeholder="Content header" asp-for="ContentHeader">
                                        <span asp-validation-for="ContentHeader" class="text-danger"></span>
                                    </div>
                                    <div class="form-group res-mg-t-15">
                                        <label>Content:</label>
                                        <textarea placeholder="Content" asp-for="Content"></textarea>
                                        <span asp-validation-for="Content" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="payment-adress">
                                        <button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

