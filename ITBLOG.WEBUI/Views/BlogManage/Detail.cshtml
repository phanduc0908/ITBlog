@using ITBLOG.CORE.ViewModels;
@model BlogViewItem
@{
    ViewData["Title"] = "Detail";
 Layout = "~/Views/Shared/_LayoutAdminPage.cshtml";
}
<div class="container-fluid">
    <div class="btn-add-blog">
        <a href="@Url.Action("Index", "BlogManage")" class="my-btn">Back to List</a>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="review-content-section">
                <div id="dropzone1" class="pro-ad">
                    <form class="dropzone dropzone-custom needsclick add-professors" id="demo1-upload">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group">
                                    <label for="author">Author:</label>
                                    <input name="text" type="text" class="form-control" asp-for="Author" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="title">Title:</label>
                                    <input type="text" class="form-control" asp-for="Title" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="genre">Genre:</label>
                                    <input type="text" class="form-control" asp-for="Genre" readonly>
                                </div>
                                <div class="form-group">
                                    <label for="relase">Release Day:</label>
                                    <input type="text" class="form-control" asp-for="ReleaseDay" readonly>
                                </div>
                                <div class="form-group">
                                    <a href="@Url.Action("Index", "CommentManage", new { id = Model.BlogId})"><label for="relase">Comments:(@Model.NumberComments)</label></a>

                                </div>

                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
                                <div class="form-group edit-ta-resize res-mg-t-15">
                                    <label for="header">Content Header:</label>
                                    <textarea name="description" asp-for="ContentHeader" readonly></textarea>
                                </div>
                                <div class="form-group edit-ta-resize res-mg-t-15">
                                    <label for="content">Content:</label>
                                    <textarea name="description" asp-for="Content" readonly></textarea>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
