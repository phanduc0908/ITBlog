@model IEnumerable<ITBLOG.CORE.ViewModels.BlogViewItem>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutBlog.cshtml";
}

@Html.Partial("_Slider")
<!-- Intro Section-->
@Html.Partial("_Introduction")
<section class="featured-posts no-padding-top">
    <div class="container">
        <!-- Post-->
        @{
            List<ITBLOG.CORE.ViewModels.BlogViewItem> blogs = new List<ITBLOG.CORE.ViewModels.BlogViewItem>();
        }
        @foreach (var item in Model)
        {
            blogs.Add(item);
        }
        @for (int i = 0; i < 3; i++)
        {
            if (i % 2 == 0)
            {
                <div class="row d-flex align-items-stretch">
                    <div class="text col-lg-7">
                        <div class="text-inner d-flex align-items-center">
                            <div class="content">
                                <header class="post-header">
                                    <div class="category"><a href="#">@blogs[i].Genre</a></div>
                                    <a href="@Url.Action("Detail", "BLog", new { id = blogs[i].BlogId})">
                                        <h2 class="h4">@blogs[i].Title</h2>
                                    </a>
                                </header>
                                <p>@blogs[i].ContentHeader</p>
                                <footer class="post-footer d-flex align-items-center">
                                    <a href="#" class="author d-flex align-items-center flex-wrap">
                                        <div class="avatar"><img src="~/Assets/img/avatar-1.jpg" alt="..." class="img-fluid"></div>
                                        <div class="title"><span>@blogs[i].Author</span></div>
                                    </a>
                                    <div class="date"><i class="icon-clock"></i>  @blogs[i].ReleaseDay.ToString("dd/MM/yyy")</div>
                                </footer>
                            </div>
                        </div>
                    </div>
                    <div class="image col-lg-5"><img src="~/Assets/img/featured-pic-1.jpeg" alt="..."></div>
                </div>
            }
            else
            {
                <div class="row d-flex align-items-stretch">
                    <div class="image col-lg-5"><img src="~/Assets/img/featured-pic-2.jpeg" alt="..."></div>
                    <div class="text col-lg-7">
                        <div class="text-inner d-flex align-items-center">
                            <div class="content">
                                <header class="post-header">
                                    <div class="category"><a href="#">@blogs[i].Genre</a></div>
                                    <a href="@Url.Action("Detail", "BLog", new { id = blogs[i].BlogId})">
                                        <h2 class="h4">@blogs[i].Title</h2>
                                    </a>
                                </header>
                                <p>@blogs[i].ContentHeader</p>
                                <footer class="post-footer d-flex align-items-center">
                                    <a href="#" class="author d-flex align-items-center flex-wrap">
                                        <div class="avatar"><img src="~/Assets/img/avatar-2.jpg" alt="..." class="img-fluid"></div>
                                        <div class="title"><span>@blogs[i].Author</span></div>
                                    </a>
                                    <div class="date"><i class="icon-clock"></i> @blogs[i].ReleaseDay.ToString("dd/MM/yyy")</div>
                                </footer>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        
    </div>
</section>
<!-- Divider Section-->
<section style="background: url('/Assets/img/divider-bg.jpg'); background-size: cover; background-position: center bottom" class="divider">
    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h2>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua</h2><a href="#" class="hero-link">View More</a>
            </div>
        </div>
    </div>
</section>
<!-- Latest Posts -->
<section class="latest-posts">
    <div class="container">
        <header>
            <h2>Latest from the blog</h2>
            <p class="text-big">Lorem ipsum dolor sit amet, consectetur adipisicing elit.</p>
        </header>
        <div class="row">
            @foreach (var item in Model)
            {
            <div class="post col-md-4">
                <div class="post-thumbnail"><a href="@Url.Action("Detail", "Blog", new { id = item.BlogId})"><img src="~/Assets/img/blog-1.jpg" alt="..." class="img-fluid"></a></div>
                <div class="post-details">
                    <div class="post-meta d-flex justify-content-between">
                        <div class="date">@item.ReleaseDay.ToString("dd/MM/yyy")</div>
                        <div class="category"><a href="#">@item.Genre</a></div>
                    </div><a href="@Url.Action("Detail", "Blog", new { id = item.BlogId})">
                        <h3 class="h4">@item.Title</h3>
                    </a>
                    <p class="text-muted" id="content-blog">@item.ContentHeader</p>
                </div>
            </div>
            }
        </div>
    </div>
</section>
<!-- Newsletter Section-->
<section class="newsletter no-padding-top">
    <div class="container">
        <div class="row">
            <div class="col-md-6">
                <h2>Subscribe to Newsletter</h2>
                <p class="text-big">Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
            </div>
            <div class="col-md-8">
                <div class="form-holder">
                    <form action="#">
                        <div class="form-group">
                            <input type="email" name="email" id="email" placeholder="Type your email address">
                            <button type="submit" class="submit">Subscribe</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
